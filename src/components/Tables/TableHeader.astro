---
import type { Content, Index } from './types'
interface Props {
    headers?: Content
    className? : string
}
const { headers, className } = Astro.props
---

{headers && 
    (<tr>
        {!Array.isArray(headers)? (
            <th class={className}>{headers}</th>
        ) : ( headers.map((header, index) => {
            return (
                <th class={className}>
                    {header}
                </th>
            )
        })
      )
    }
        </tr>
        )}
