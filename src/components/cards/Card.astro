---
import { Image } from 'astro:assets';
const { imageDark, imageLight, title, link, imageAlt } = Astro.props;
---
<a class="localhost-box" href={link}>
    <div>
        <figure class="system-options-img">
            <Image class="dark" src={imageDark} alt={imageAlt}/>
            <!--<Image class="light" src={imageLight} alt={imageAlt} />-->
        </figure>
        <h6>{title}</h6>
        <slot />
    </div>
</a>